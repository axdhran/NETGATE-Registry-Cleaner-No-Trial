@page "/Products"

@using PFakeStoreApiMovil.Models;
@using PFakeStoreApiMovil.Services;

@inject IProductoService service

<h3>Todos los Productos</h3>


 @if(_productos == null)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else
{
    @foreach (var products in _productos)
    {
           <div class="card" style="width:18rem">
                <div class="card-body">
                    <h4 class="card-title">@products.title</h4>
                    <p class="card-text">Precio: $@products.price</p>
                    <p class="card-text">@products.description</p>
                <img src="@products.image" alt="@products.title" class="img-fluid" width="150" height="150" />
                </div>
           </div>
          <br/> 
    }
}
            
@code {

    private List<Productos> _productos;

    protected override async Task OnInitializedAsync()
    {
        _productos = await service.GetAllProducts();
    }
}
